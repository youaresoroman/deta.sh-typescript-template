{
	"name": "sample-ts",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"clean": "rm -rf dist",
		"build": "tsc",
		"prebuild": "npm run clean",
		"test": "tsc --noEmit",
		"lint": "eslint src/",
		"deploy": "npm run build && npm run deploy:all && npm run clean",
		"watch": "tsc --watch",
		"nodemon": "nodemon local.js",
		"start": "npm run watch & npm run nodemon",
		"deploy:env": "deta update -e .env",
		"deploy:app": "deta deploy",
		"deploy:all": "npm run deploy:env && npm run deploy:app",
		"documentation": "npx typedoc"
	},
	"dependencies": {
		"deta": "^1.0.1",
		"express": "^4.17.1",
		"nodemon": "^2.0.15",
		"typedoc": "^0.22.9"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"eslint": "^8.2.0",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.4.2"
	}
}
